# Environment Configuration Example
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control

# Environment Mode
ENVIRONMENT=development  # production | development | staging

# Database Configuration (REQUIRED)
LOGO_SQL_SERVER=localhost,1433
LOGO_SQL_DB=your_database_name
LOGO_SQL_USER=your_username
LOGO_SQL_PASSWORD=your_secure_password

# Database Options (OPTIONAL)
LOGO_SQL_DRIVER=ODBC Driver 17 for SQL Server
LOGO_COMPANY_NR=025
LOGO_PERIOD_NR=01
DB_CONN_TIMEOUT=10

# Connection Pool Configuration (OPTIONAL)
DB_USE_POOL=true
DB_POOL_MIN_CONNECTIONS=2
DB_POOL_MAX_CONNECTIONS=10
DB_POOL_TIMEOUT=30

# API Configuration (REQUIRED for production)
API_SECRET=your-secret-key-at-least-32-characters-long-generate-with-secrets-token-urlsafe
API_ALGORITHM=HS256
API_TOKEN_EXPIRE_MINUTES=120

# Application Settings (OPTIONAL)
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_LOG_DIR=C:/Users/User/Desktop/logs

# UI Settings (OPTIONAL)
UI_AUTO_REFRESH=30
UI_SOUNDS_ENABLED=true
UI_SOUNDS_VOLUME=0.9

# Scanner Settings (OPTIONAL)
SCANNER_OVER_SCAN_TOLERANCE=0
SCANNER_AUTO_FOCUS=true

# Performance Settings (OPTIONAL)
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
PAGINATION_DEFAULT_SIZE=50